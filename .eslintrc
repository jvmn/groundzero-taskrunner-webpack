{
    "extends": "eslint:recommended",
    "root": true,
    "rules": {
        "semi": ["error", "never"],
        "indent": ["error", 2],
        "no-console": ["error", { "allow": ["log", "warn", "error", "info", "table"] }]
    },
    "env": {
        "node": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    }
}
